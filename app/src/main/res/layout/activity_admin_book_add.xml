<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_add_isbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="ISBN"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_add_isbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_add_isbn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:hint="ISBN"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/tv_add_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_add_isbn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_add_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_add_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:hint="Title"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/tv_add_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_add_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Author"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_add_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_add_author"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:hint="Author's name (separated by comma)"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/tv_add_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_add_author"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Total Books"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_add_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/tv_add_total"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:hint="Total number of books"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/tv_add_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_add_total"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Available Books"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_add_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_add_available"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="32dp"
        android:hint="Books available to issue"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_add_available"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:minHeight="48dp"
            android:text="Cancel"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:minHeight="48dp"
            android:text="Add"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
</RelativeLayout>