<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.library.lms">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LMS"
        tools:targetApi="31">
        <activity
            android:name=".signUp"
            android:exported="false" />
        <activity
            android:name=".teacher"
            android:exported="false" />
        <activity
            android:name=".student"
            android:exported="false" />
        <activity android:name=".Useractivity"
            android:exported="false"/>
        <activity android:name=".UserActivityRequest"
            android:exported="false"/>
        <activity android:name=".UserActivityReturn"
            android:exported="false"/>
        <activity android:name=".UserActivitySearch"
            android:exported="false"/>
        <activity android:name=".UserActivitySeeBooks"
            android:exported="false"/>

        <activity
            android:name=".UsersOptionActivity"
            android:exported="false"
            android:label="Users"
            android:parentActivityName=".AdminActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.library.lms.AdminActivity" />
        </activity>
        <activity
            android:name=".BooksActivity"
            android:exported="false"
            android:label="Books"
            android:parentActivityName=".AdminActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.library.lms.AdminActivity" />
        </activity>
        <activity
            android:name=".AdminActivity"
            android:exported="false"
            android:label="Admin" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>